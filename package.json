  "scripts": {
    "prechain": "rimraf build/localhost_* && rimraf build/hardhat_*",
    "chain": "hardhat node --max-memory 8096 --no-deploy  --network hardhat  --hostname 0.0.0.0 --port 7545",
    "fork": "hardhat node --no-deploy --network hardhat --fork https://mainnet.infura.io/v3/$INFURA_ID",
    "test": "hardhat test --network hardhat",
    "compile": "hardhat compile",
    "coverage": "hardhat --network hardhat coverage",
    "make-badges": "istanbul-badges-readme",
    "build:donationslistener": "docker build -f ./docker/donations-listener/Dockerfile .  -t donations-listener",
    "run:donationslistener": "docker/donations-listener/run.sh",
    "run:tester:donationslistener": "node test/validation/mockDonations.js",
    "deploy": "hardhat deploy  --network localhost  --export-all ./build/localhost_contracts.json",
    "postdeploy": "hardhat run scripts/publish.js",
    "flattenContracts": "./scripts/flattenContracts.sh",
    "updateCharities": "hardhat run  --network localhost  scripts/updateCharities.js",
    "addDonationCurrencies": "hardhat run  --network localhost  scripts/addDonationsCurrencies.js",
    "watch": "node scripts/watch.js",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "send": "hardhat send",
    "generate": "hardhat generate",
    "account": "hardhat account",
    "etherscan-verify": "hardhat etherscan-verify --api-key $REACT_APP_ETHERSCAN_KEY"
  }
}
